{
  "manifest_version": 3,
  "name": "Mawaqit Prayer Notifications",
  "version": "0.1.0",
  "description": "Shows Brave notifications at prayer times fetched from Mawaqit for a selected mosque.",
  "permissions": [
    "alarms",
    "notifications",
    "storage"
  ],
  "host_permissions": [
    "https://api.aladhan.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html",
  "action": {
    "default_title": "Mawaqit Prayer Notifications",
    "default_popup": "popup.html"
  }
}

