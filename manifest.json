{
  "manifest_version": 3,
  "name": "Mawaqit (أوقات الصلاة)",
  "version": "1.0",
  "description": "يعرض أوقات الصلاة الإسلامية ويرسل إشعارات.",
  "permissions": [
    "notifications",
    "storage",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon128.svg",
      "48": "icons/icon128.svg",
      "128": "icons/icon128.svg"
    }
  }
}
